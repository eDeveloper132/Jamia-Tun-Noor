{
  "version": 2,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "dist/index.mjs", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/public/$1" },
    { "src": "/api/(.*)", "dest": "dist/index.mjs" },
    { "src": "/(.*)", "dest": "dist/index.mjs" }
  ]
}